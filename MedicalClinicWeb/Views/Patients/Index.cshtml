<div ng-controller="patientsController">

    <div class="container">

        <div class="panel panel-default">
            
            <div class="panel-body">                             
                
                <div class="divList">
                    <h3> Patient List </h3>

                    <input type="button" class="btn btn-sm btn-primary" value=" Add Patient" ng-click="AddPatientDiv()" />
                    <br/>

                    <table cellpadding="12" class="table table-bordered table-hover">
                        <tr>
                            <td><b>ID</b></td>
                            <td><b>Name</b></td>
                            <td><b>Gender</b></td>
                            <td><b>Age</b></td>
                            <td><b>Actions</b></td>
                        </tr>
                        <tr ng-repeat="patient in patients">
                            <td>
                                {{patient.PatientID}}
                            </td>
                            <td>
                                {{patient.Name}}
                            </td>
                            <td>
                                <span ng-if="patient.Gender == '0'">
                                    Male
                                </span>
                                <span ng-if="patient.Gender == '1'">
                                    Female
                                </span>

                            </td>
                            <td>
                                {{patient.Age}}
                            </td>

                            <td>
                                <span ng-click="editPatient(patient)" class="btn btn-sm btn-primary">Edit</span>
                                <span ng-click="deletePatient(patient)" class="btn btn-sm btn-primary">Delete</span>
                                <a href="#!appointments" class="btn btn-sm btn-primary">Create Appointment</a>
                            </td>
                        </tr>
                    </table>

                </div>

                <div ng-show="divPatient">
                    <p class="divHead">{{Action}} Patient</p>
                    <table>
                        <tr>
                            <td><b>Id</b></td>
                            <td>
                                <input type="text" disabled="disabled" ng-model="PatientId" />
                            </td>
                        </tr>
                        <tr>
                            <td><b>Name</b></td>
                            <td>
                                <input type="text" ng-model="PatientName" />
                            </td>
                        </tr>
                        <tr>
                            <td><b>Gender</b></td>
                            <td>
                                <select ng-model="selectedGender">
                                    <option ng-repeat="g in Genders" value="{{g.value}}"> {{g.name}}</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td><b>Age</b></td>
                            <td>
                                <input type="text" ng-model="PatientAge" />
                            </td>
                        </tr>

                        <tr>
                            <td colspan="2">
                                <input type="button" class="btn btn-sm btn-primary" value="Save" ng-click="AddUpdatePatient()" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        
    </div>

